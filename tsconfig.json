{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@archef2000/react-planner": [
        "src/index.ts"
      ],
      "*": [
        "node_modules/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "src/**/*",
    "demo/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "demo/dist"
  ]
}